<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/view_pager_height"
        android:layout_marginBottom="@dimen/bottom_navigation_height"
        android:columnCount="2"
        android:rowCount="2">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_column="0"
            android:gravity="center">
            <Button
                android:id="@+id/advanced_scanf_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扫描"
                android:minWidth="100dp"
                android:minHeight="100dp"
                android:textSize="25sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/auto_scanf_button_seletor"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_column="1"
            android:gravity="center">
            <Button
                android:id="@+id/advanced_recognition_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="识别"
                android:minWidth="100dp"
                android:minHeight="100dp"
                android:textSize="25sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/auto_scanf_button_seletor"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="0"
            android:gravity="center">
            <Button
                android:id="@+id/advanced_translate_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="翻译"
                android:minWidth="100dp"
                android:minHeight="100dp"
                android:textSize="25sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/auto_scanf_button_seletor"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="1"
            android:gravity="center">
            <Button
                android:id="@+id/advanced_word_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="词库"
                android:minWidth="100dp"
                android:minHeight="100dp"
                android:textSize="25sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/auto_scanf_button_seletor"/>
        </RelativeLayout>
    </GridLayout>
</FrameLayout>