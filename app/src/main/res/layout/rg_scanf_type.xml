<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">
    <RadioGroup
        android:id="@+id/group_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/rd_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通用文字识别" />

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/rd_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通用文字识别（高精度）" />
        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/rd_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通用文字识别（含生僻字）" />

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/rd_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网络图片文字识别" />

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/rd_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="银行卡识别" />

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/rd_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="行驶证识别" />
        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/rd_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="驾驶证识别" />

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/rd_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车牌识别" />
        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/rd_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="营业执照识别" />

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/rd_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通用票据识别" />
    </RadioGroup>
</LinearLayout>